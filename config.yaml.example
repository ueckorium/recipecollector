# Recipe Collector Bot - Configuration
# Copy this file to config.yaml and adjust the values

telegram:
  # Bot token from @BotFather
  bot_token: ${TELEGRAM_BOT_TOKEN}

  # Only these user IDs may use the bot
  # Find your ID: Message @userinfobot on Telegram
  # Leave empty = ANYONE can use the bot (not recommended!)
  allowed_users:
    - 123456789

gemini:
  # API Key from https://aistudio.google.com/app/apikey
  api_key: ${GEMINI_API_KEY}
  # gemini-2.0-flash is cheaper and sufficient for recipes
  model: gemini-2.0-flash

# Optional: Save recipes locally
storage:
  enabled: false
  # Path to Obsidian vault recipes folder
  path: /path/to/obsidian/vault/Recipes

# Output format for recipes
output:
  # "markdown" = Standard Markdown (.md) for Obsidian
  # "cooklang" = Cooklang format (.cook) for Cooklang apps/Obsidian plugin
  format: markdown

# Optional: Custom prompts (default is English)
# prompts:
#   extraction: |
#     Analyze the sources and extract the recipe.
#     Respond ONLY with a JSON object...
#
#     (Full prompt see config.py DEFAULT_EXTRACTION_PROMPT)
